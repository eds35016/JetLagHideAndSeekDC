---
import "@/styles/globals.css";
import { ToastContainer } from "react-toastify";
// @ts-ignore
import { pwaInfo } from "virtual:pwa-info";

export interface Props {
    className?: string;
}

const { className } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no" />
        <link
            rel="icon"
            type="image/x-icon"
            href="https://jetlag.philoop.net/favicon.ico"
        />
        <link
            rel="shortcut icon"
            type="image/x-icon"
            href="https://jetlag.philoop.net/favicon.ico"
        />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="https://jetlag.philoop.net/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="https://jetlag.philoop.net/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="https://jetlag.philoop.net/favicon-16x16.png"
        />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Oxygen:wght@300;400;700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
            rel="stylesheet"
        />
        <script
            type="text/partytown"
            async
            src="https://www.googletagmanager.com/gtag/js?id=G-RKJ9G6CNC2"
        ></script>
        <script type="text/partytown">
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag("js", new Date());

            gtag("config", "G-RKJ9G6CNC2");
        </script>
        <meta name="generator" content={Astro.generator} />
        <!-- HTML Meta Tags -->
        <title>Jet Lag DC Map Generator</title>
        <meta
            name="description"
            content="Automatically generate maps for Jet Lag The Game: Hide and Seek with ease! Simply name the questions and watch the map eliminate hundreds of possibilities in seconds."
        />

        <!-- Facebook Meta Tags -->
        <meta
            property="og:url"
            content="https://jetlag.philoop.net/"
        />
        <meta property="og:type" content="website" />
        <meta
            property="og:title"
            content="Jet Lag DC Map Generator"
        />
        <meta
            property="og:description"
            content="Automatically generate maps for Jet Lag The Game: Hide and Seek with ease! Simply name the questions and watch the map eliminate hundreds of possibilities in seconds."
        />
        <meta
            property="og:image"
            content="https://jetlag.philoop.net/JLIcon.png"
        />

        <!-- Twitter Meta Tags -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta property="twitter:domain" content="jetlag.philoop.net" />
        <meta
            property="twitter:url"
            content="https://jetlag.philoop.net/"
        />
        <meta
            name="twitter:title"
            content="Jet Lag DC Map Generator"
        />
        <meta
            name="twitter:description"
            content="Automatically generate maps for Jet Lag The Game: Hide and Seek with ease! Simply name the questions and watch the map eliminate hundreds of possibilities in seconds."
        />
        <meta
            name="twitter:image"
            content="https://jetlag.philoop.net/JLIcon.png"
        />

        {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
    </head>
    <body class:list={[className, "dark"]}>
        <slot />
        <ToastContainer client:only />
    </body>
</html>
